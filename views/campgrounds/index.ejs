<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
           <h1>This is the campgrouds page</h1> 
           <p>View our great collection!!</p>
           <p>
               <a class="btn btn-primary btn-lg" href="/campground/new">Add new camps</a>
           </p>
       </div>
    </header>
    
<div class="container">
    <h2>Most Precious Collection</h2>
</div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">

        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                <img src="<%= camp.image %>">
                <div class="caption">
                    <%= camp.name%>
                </div>
                <p>
                    <a class="btn btn-primary btn-md" href="/campground/<%= camp._id %>">More Info</a>
                </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>